                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sign in <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'Admin Login', admin_login_url %></li>
                    <li><%= link_to 'User Login', login_url %></li>
                  </ul>
                </li>
