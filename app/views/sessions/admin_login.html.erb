<div class="container">
  <h2 class="page-header">Enter gmail address and Password</h2>
  <%= alert %>
  <%= notice %>
  <%= form_tag do %>
      <fieldset>
        <legend> Login</legend>
        <div class="form-group">
          <label>E-mail:</label>
          <%= text_field_tag :email, params[:email], class: 'form-control' %>
        </div>
        <div class="form-group">
          <label>Password:</label>
          <%= password_field_tag :password, params[:password], class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= submit_tag 'Login', class: ' btn btn-default' %>
        </div>
      </fieldset>
  <% end %>
  <p>Not Yet Account ?</p><%= link_to 'Sign Up', new_school_path %>
</div>